<script>
	function login() {
		if(confirm('가입하시겠습니까?')) {
			if (form.id.value == '') {
	            alert('아이디를 입력하세요');
	            document.form.id.focus();
	            return false;
	        }
	        if(form.pw.value == ''){
	            alert('비밀번호를 입력하세요');
	            document.form.pw.focus();
	            return false;
	        }
	        if(form.pwc.value == ''){
	            alert('비밀번호확인을 입력하세요');
	            document.form.pwc.focus();
	            return false;
	        }
	        if(form.name.value == '') {
	            alert('이름을 입력하세요');
	            document.form.name.focus();
	            return false;
	        }
	        if(form.phone.value == '') {
	            alert('전화번호를 입력하세요');
	            document.form.phone.focus();
	            return false;
	        }
	        if(form.email.value == '') {
	            alert('이메일을 입력하세요');
	            document.form.email.focus();
	            return false;
	        }
	        if(form.birth.value == '') {
	            alert('전화번호를 입력하세요');
	            document.form.birth.focus();
	            return false;
	        }
			if(form.pw.value !== form.pwc.value){
				alert('비밀번호가 일치하지 않습니다.');
				document.form.pwc.focus();
				return false;
			}
			
			form.method="post";
			form.action = "joinFormProc.jsp";
			form.submit();
			
		}
	}
	
</script>
<script>
	function mlist() {
		if(confirm('회원목록을 보시겠습니까?')) {
			location.href="memberList.jsp";
		}
	}

</script>

</html>
